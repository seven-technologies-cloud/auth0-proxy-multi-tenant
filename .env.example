# =================================
# Auth0 Multi-Tenancy Management API
# Environment Configuration Template
# =================================

# Server Configuration
NODE_ENV=development
PORT=3000

# Master Auth0 Tenant Configuration
# This is your main Auth0 tenant that manages all customer tenants
MASTER_AUTH0_DOMAIN=your-tenant.us.auth0.com
MASTER_AUTH0_CLIENT_ID=your_client_id
MASTER_AUTH0_CLIENT_SECRET=your_client_secret
MASTER_AUTH0_AUDIENCE=https://your-tenant.us.auth0.com/api/v2/

# JWT Configuration
JWT_SECRET=change_me_in_real_env
JWT_EXPIRES_IN=24h

# Auth0 Management API Configuration
AUTH0_MANAGEMENT_API_AUDIENCE=https://your-tenant.us.auth0.com/api/v2/
# AUTH0_MANAGEMENT_API_SCOPE=read:users create:users update:users delete:users read:clients create:clients update:clients delete:clients read:tenant_settings update:tenant_settings

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Security Configuration
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Database Configuration (if using external storage for tenant metadata)
# DATABASE_URL=postgresql://username:password@localhost:5432/auth0_proxy
# DATABASE_SSL=false

# Redis Configuration (for caching Auth0 tokens)
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# Monitoring and Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Default Seat Limits
DEFAULT_SEAT_LIMIT=10
MAX_SEAT_LIMIT=1000

# Auth0 Tenant Creation Settings
DEFAULT_TENANT_REGION=us
DEFAULT_TENANT_ENVIRONMENT=development

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

# Error Handling
DETAILED_ERRORS=true
STACK_TRACE_ENABLED=false

# Session Configuration
SESSION_SECRET=VsCpQJTKKnFx7hxYtmyinLvKbxHJpqHvdkheC62Cc8Ua
SESSION_MAX_AGE=86400000

# Webhook Configuration (for Auth0 events)
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_ENABLED=false

# Feature Flags
ENABLE_TENANT_CREATION=true
ENABLE_USER_MANAGEMENT=true
ENABLE_SEAT_MANAGEMENT=true
ENABLE_AUDIT_LOGGING=true

# Development Settings
DEBUG_MODE=false
MOCK_AUTH0_API=false