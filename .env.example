# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_MGMT_CLIENT_ID=your_management_api_client_id
AUTH0_MGMT_CLIENT_SECRET=your_management_api_client_secret

# Security Configuration
MGMT_CLIENT_ALLOWLIST=your_m2m_client_id_1,your_m2m_client_id_2

# API Configuration
API_PORT=3000
NODE_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# CORS Configuration
ALLOWED_ORIGINS=https://admin.example.com,https://dashboard.example.com

# Idempotent Create Configuration
# Set to 'conflict' to return 409 for existing users, 'return' to return 200 with existing user
IDEMPOTENT_CREATE_MODE=return

